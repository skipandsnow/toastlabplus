def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'generated_xcode_build_settings.rb'), __FILE__)
  if File.exist?(generated_xcode_build_settings_path)
    if File.read(generated_xcode_build_settings_path) =~ /FLUTTER_ROOT\=(.*)/
      return $1.strip
    end
  end
  # Fallback for CI if generated file missing
  return ENV['FLUTTER_ROOT'] if ENV['FLUTTER_ROOT']
  
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path} or environment variable"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

platform :ios, '18.0'

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '18.0'
    end
  end
end
